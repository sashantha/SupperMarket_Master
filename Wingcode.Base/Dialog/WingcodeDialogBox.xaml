             xmlns:vms="clr-namespace:Wingcode.Base.ViewModels"
             xmlns:atp="clr-namespace:Wingcode.Base.AttachedProperties"
             xmlns:wcvs="http://wingcodems.net/convertors"
             xmlns:prism="http://prismlibrary.com/"
