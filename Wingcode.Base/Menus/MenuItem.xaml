             xmlns:wcvs="http://wingcodems.net/convertors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DataContext="{x:Static vms:MenuItemDesignViewModel.instance}"
             mc:Ignorable="d">

